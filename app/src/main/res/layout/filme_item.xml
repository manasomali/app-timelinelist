<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_margin="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="20dp"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            style="@style/LinearLayoutStyle"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageview_backdrop_filme"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_marginRight="-1dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/sample_img_card"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textview_nome_filme"
                    style="@style/CardTextView"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="Nome Filme"
                    android:textSize="18dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/textview_data_filme"
                    style="@style/CardTextView"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:layout_marginTop="2dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XX/XX/XXXX" />
                <LinearLayout
                    android:id="@+id/linearlayout_filme_reacoes"
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imageview_cinema"
                        android:visibility="gone"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:src="@drawable/cinema_ico" />
                    <ImageView
                        android:id="@+id/imageview_dormiu"
                        android:visibility="gone"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:src="@drawable/sleep_ico" />
                    <ImageView
                        android:id="@+id/imageview_chorou"
                        android:visibility="gone"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:paddingTop="2dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/cry_ico" />
                    <ImageView
                        android:id="@+id/imageview_favorito"
                        android:visibility="gone"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:src="@drawable/favorite_ico" />
                    <ImageView
                        android:id="@+id/imageview_dislike"
                        android:visibility="gone"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:src="@drawable/dislike_ico" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <TextView
            style="@style/CardTextView"
            android:id="@+id/textview_notapessoal_filme"
            android:layout_marginStart="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:shadowColor="#000000"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="1.6"
            android:textColor="@color/colorWhite"
            android:textSize="15sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:gravity="bottom"
            android:text="XX/10" />
    </FrameLayout>
</androidx.cardview.widget.CardView>